@using Demo.BusinessLogic.Dtos


@model IEnumerable<EmployeeDto>

@{
    ViewData["Title"] = "Index";
}

<h1 class="my-5">All Employees</h1>

<a class="btn btn-success" asp-controller="Employee" asp-action="Create">Creat New Employee  </a>

@if (Model.Any())
{
    <table class="table table-striped table-hover mt-2">
        <thead class="text-center">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th> @Html.DisplayNameFor(e => e.EmployeeType) </th>
                <th>Age</th>
                <th>Salary</th>
                <th>@Html.DisplayNameFor(e => e.IsActive)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var employee in Model)
            {
                <tr class="text-center">
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.EmployeeType</td>
                    <td>@employee.Age</td>
                    <td>@Html.DisplayFor(e => employee.Salary)</td>
                    <td>
                        @if (@employee.IsActive)
                        {
                            <i class="fa-solid fa-circle-check text-success "></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-circle-xmark text-danger"></i>
                        }
                    </td>
                    <td> <a class="btn btn-info" asp-action="Details" asp-route-id="@employee.Id"> <i class="fas fa-eye"></i> Details</a> </td>
                    <td> <a class="btn btn-success" asp-action="Edit" asp-route-id="@employee.Id"><i class="fas fa-edit"></i>Edite</a> </td>
                    <td>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            <i class="fas fa-trash"></i>  Delete
                        </button>
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Delete Employee </h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure to delete this is Employee has Name @employee.Name ?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <form asp-action="Delete" asp-controller="Employee" asp-route-id="@employee.Id" method="post">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <p class="alert alert-info p-4 rounded-2  my-3  "> No Employee Found !! </p>
}

